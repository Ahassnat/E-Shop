@model IndexViewModel
<!--Notification Row Start-->
<div class="container-fluid Notify" @Model.noticRow.CssClass>
    <div class="row">
        <div class="col-12">
            <p>
                @Model.noticRow.NotifyText
            </p>
        </div>
    </div>
</div>


<!--carousel row Start-->
<div class="container-fluid p-0 @Model.carouselRow.CssClass">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        @if (Model.carouselRow.ShowIndicators == true)
        {
            <ol class="carousel-indicators ">
                @foreach (var caroitem in Model.carouselRow.CarouselItems)
                {
                    if (caroitem.IsActive == true)
                    {
                        <li data-target="#myCarousel" data-slide-to="@caroitem.Index" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#myCarousel" data-slide-to="@caroitem.Index"></li>
                    }

                }


            </ol>
        }

        <div class="carousel-inner">
            @foreach (var caroitem in Model.carouselRow.CarouselItems)
            {
                if (caroitem.IsActive == true)
                {
                    <div class="carousel-item  active">
                        <img src="@Url.Content(caroitem.ImagePath)" class="img-fluid" alt="@caroitem.ImageText">
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img src="@Url.Content(caroitem.ImagePath)" class="img-fluid" alt="@caroitem.ImageText">
                    </div>
                }
            }
        </div>


        @if (Model.carouselRow.ShowPreviousBtn == true)
        {
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon bg-dark border border-dark rounded-circle" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
        }
        @if (Model.carouselRow.ShowNextBtn == true)
        {
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon bg-dark border border-dark rounded-circle" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        }

    </div>
</div>

<!--carousel row end-->